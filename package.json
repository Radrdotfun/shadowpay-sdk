{
  "name": "@shadowpay/sdk",
  "version": "0.1.0",
  "private": true,
  "description": "Developer-friendly TypeScript SDK for accepting private payments on Solana",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:core": "pnpm --filter @shadowpay/core build",
    "build:client": "pnpm --filter @shadowpay/client build",
    "build:server": "pnpm --filter @shadowpay/server build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:elgamal": "tsx test-elgamal.ts",
    "test:circuits": "tsx test-proof-generation.ts",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "rimraf": "^6.1.0",
    "tsx": "^4.20.6",
    "turbo": "^1.10.16",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
